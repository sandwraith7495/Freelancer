<% provide(:title, 'Edit project') %>
<h1>Edit Project</h1>
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_tag(work_path(@work), :method => 'PUT') do %>

          <%= label_tag :name %>
          <%= text_field_tag :name, @work.name, class: 'form-control' %>

            <%= label_tag :description %>
            <%= text_area_tag :description, @work.description, class: 'form-control' %>

              <%= label_tag :price %>
              <%= number_field_tag :price, @work.price, class: 'form-control' %>


                <%= submit_tag "Submit your edit", class: "btn btn-primary" %>
                <% end %>
            </div>
        </div>
