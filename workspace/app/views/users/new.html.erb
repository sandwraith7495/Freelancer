<header class="navbar navbar-fixed-top navbar-inverse">
    <div class="container">
        <nav>
            <div class="nav navbar-nav navbar-left">
                <%= link_to image_tag("logo.png", :alt => "rss feed", :width => 70, class: 'img-responsive'), '/' %>
              </div>
              <ul class="nav navbar-nav navbar-right">
                  <li><%= link_to "Home",   '/' %></li>
                  <li><%= link_to "Sign Up",   '/signup' %></li>
                  <li><%= link_to "Log In",   '/login' %></li>

              </ul>
          </nav>
      </div>
  </header>
  <br>
  <% provide(:title, 'Sign up') %>
  <% provide(:button_text, 'Sign me up!') %>


  <div class="row">
      <div class="col-md-6 col-md-offset-3">
          <div class="information-form">
              <h3>Sign up now</h3>
              <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>

              <%= render 'form' %>
          </div>
      </div>
  </div>
  <script>
    $('input:radio[name="role_id"]').change(
            function () {
                if ($(this).is(':checked') && $(this).val() === '1') {
                    $('#list').html("<%= j render 'users/list'  %> ");
                }
                else {
                    $('#list').html("");
                }
            });
  </script> 

