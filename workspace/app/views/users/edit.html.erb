<% provide(:title, 'Update your profile') %>
<h1>Edit Profile</h1>
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_tag(user_path(@user), :method => 'PUT') do %>
          <%= render 'shared/error_messages' %>

          <%= label_tag :fullname %>
          <%= text_field_tag :fullname, @user.fullname, class: 'form-control' %>

            <%= label_tag :email %>
            <%= email_field_tag :email, @user.email, class: 'form-control' %>

              <div class="row">
                  <%= label_tag '', 'Gender', class: 'col-md-3'   %>
                    <div class="col-md-4">
                        <%= label_tag :gender, 'Male'   %>
                        <%= radio_button_tag :gender, 'Male', :checked => 1 %>
                    </div>
                    <div class="col-md-4">
                        <%= label_tag :gender, 'Female' %>
                        <%= radio_button_tag :gender, 'Female' %> 
                    </div>
                </div>
                <%= label_tag :contact %>
                <%= text_field_tag :contact, @user.contact, class: 'form-control' %>
                  <%= label_tag :info %>
                  <%= text_area_tag :info, @user.info, class: 'form-control' %>

                    <%= label_tag :role_id, 'Your are a '+@user.role.name%>
                    <div id="list"></div>
                    <center>
                        <%= submit_tag "Edit", class: "btn btn-primary" %>
                      </center>
                    <% end %>
                </div>
            </div>
            <script>
            <%# if @user.role.id == 1 %>
              <%#*$('#list').html("<%= j render 'users/list'  %> ");%>
            <%# end %>
            </script>
